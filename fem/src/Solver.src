#include "../config.h"

PROGRAM Solver
   USE Types
   USE GeneralUtils

   INTEGER, PARAMETER :: Initialize=0

   CHARACTER(LEN=MAX_NAME_LEN) :: DateStr
   REAL(KIND=dp) :: CT, RT, CPUTime, RealTime

#if defined(MINGW32)
   CALL SET_STDIO_BUFS()
#endif

   CT = CPUtime()
   RT = RealTime()
   DateStr = FormatDate()
   WRITE( *,'(A,A)' ) "ELMER SOLVER (v " // VERSION // ") STARTED AT: ", TRIM(DateStr)
   CALL ElmerSolver(Initialize)

   WRITE( *,'(a,F12.2,F12.2)' ) 'SOLVER TOTAL TIME(CPU,REAL): ', &
               CPUTime()-CT, RealTime()-RT
   DateStr = FormatDate()
   WRITE( *,'(A,A)' ) 'ELMER SOLVER FINISHED AT: ', TRIM(DateStr)
END PROGRAM Solver

